{
  "manifest_version": 3,
  "name": "ChatGPT Math Dir Resolver",
  "version": "1.0",
  "description": "Sets dir=ltr for KaTeX HTML elements on ChatGPT",
  "author": "Milad Niroee",
  "homepage_url": "https://github.com/miladniroee/chatgpt-math-dir-resolver",
  "browser_specific_settings": {
    "gecko": {
      "id": "mniroee@gmail.com",
      "data_collection_permissions": {
        "data_collection": false
      }
    }
  },
  "icons": {
    "16": "icons/16px-ChatGPT-Logo.png",
    "32": "icons/32px-ChatGPT-Logo.png",
    "48": "icons/48px-ChatGPT-Logo.png",
    "128": "icons/128px-ChatGPT-Logo.png"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
